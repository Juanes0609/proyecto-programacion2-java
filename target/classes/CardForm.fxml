<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="co.edu.uniquindio.logisticsapp.controller.CardFormController"
      spacing="10" style="-fx-background-color: #ecf0f1; -fx-padding: 20;">
    
    <Label text="Datos de la Tarjeta" style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
    
    <GridPane hgap="10" vgap="10">
        <Label text="NÃºmero:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCardNumber" promptText="XXXX XXXX XXXX XXXX" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCardHolder" promptText="Nombre del Titular" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label text="Vencimiento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox spacing="5" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <TextField fx:id="txtMonth" promptText="MM" prefWidth="50"/>
            <Label text="/"/>
            <TextField fx:id="txtYear" promptText="AA" prefWidth="50"/>
        </HBox>
        
        <Label text="CVV:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pwdCVV" promptText="***" prefWidth="70" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10" VBox.margin="$M(10, 0, 0, 0)">
        <Button text="Pagar Ahora" onAction="#onProcessPaymentClick" 
                style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
        <Button text="Borrar" onAction="#onClearClick" 
                style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
    </HBox>
</VBox>