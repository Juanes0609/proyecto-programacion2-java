    <VBox styleClass="card-panel" VBox.vgrow="ALWAYS">
        <padding>
            <Insets top="15" right="15" bottom="15" left="15"/>
        </padding>

        <TableView fx:id="shipmentTable" VBox.vgrow="ALWAYS" styleClass="table-view">
            <columns>
                <TableColumn fx:id="colId" text="ID" />
                <TableColumn fx:id="colPackageType" text="Tipo Paquete" />
                <TableColumn fx:id="colOrigin" text="Origen" />
                <TableColumn fx:id="colDestination" text="Destino" />
                <TableColumn fx:id="colDistance" text="Distancia (km)" />
                <TableColumn fx:id="colTotalCost" text="Costo Total" />
                <TableColumn fx:id="colState" text="Estado" />
                <TableColumn fx:id="colDelivery" text="Repartidor Asignado" /> 
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15"/>
            </VBox.margin>
            <Button fx:id="btnBack" onAction="#onBackToDashboard" styleClass="secondary-button" text="â† Volver al Dashboard"/>
