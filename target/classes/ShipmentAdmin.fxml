<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="co.edu.uniquindio.logisticsapp.controller.AdminShipmentController"
      stylesheets="@styles1.css" styleClass="dashboard-content-area">

    <padding>
        <Insets top="30" right="30" bottom="30" left="30"/>
    </padding>

