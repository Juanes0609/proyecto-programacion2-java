<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="co.edu.uniquindio.logisticsapp.controller.PaymentController"
      spacing="15" style="-fx-padding: 20;">
    
    <Label text="Procesar Pago" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
    
    <Label fx:id="lblAmount" style="-fx-font-size: 24; -fx-text-fill: green;"/>
    
    <VBox spacing="10">
        <Label text="Métodos de Pago:"/>
        <HBox spacing="10" alignment="CENTER_LEFT">
            <Button text="Tarjeta Crédito" onAction="#onCreditCardPayment"/>
            <Button text="Tarjeta Débito" onAction="#onDebitCardPayment"/>
            
            <Button text="Prioridad (+ Tarifa)" onAction="#onPriorityPaymentClick"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
        </HBox>
        
        <Separator/>
        
        <Button text="Sistema Bancario" onAction="#onIntegratedBankPayment" 
                style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
    </VBox>
    
    <StackPane fx:id="contentArea" prefHeight="300" 
               style="-fx-border-color: #bdc3c7; -fx-padding: 10;">
        <Label text="Seleccione un método de pago." style="-fx-text-fill: #7f8c8d;"/>
    </StackPane>
    
    <Button text="Cancelar" onAction="#onCancel"/>
</VBox>