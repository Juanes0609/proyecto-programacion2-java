<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="co.edu.uniquindio.logisticsapp.controller.CardFormController"
      spacing="15" styleClass="root-container" stylesheets="@styles1.css">
    
    <Label styleClass="section-subtitle" text="ðŸ’³ Ingreso de Datos de la Tarjeta"/>
    
    <GridPane hgap="15" vgap="15" alignment="CENTER_LEFT">
        <columnConstraints>
            <ColumnConstraints halignment="RIGHT" prefWidth="100"/>
            <ColumnConstraints halignment="LEFT" prefWidth="250"/>
        </columnConstraints>

        <Label styleClass="form-label" text="NÃºmero:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCardNumber" promptText="XXXX XXXX XXXX XXXX" styleClass="form-input" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <Label styleClass="form-label" text="Nombre:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCardHolder" promptText="Nombre del Titular" styleClass="form-input" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <Label styleClass="form-label" text="Vencimiento:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox spacing="10" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <TextField fx:id="txtMonth" promptText="MM" prefWidth="55" styleClass="form-input"/>
            <Label text="/" styleClass="form-label" />
            <TextField fx:id="txtYear" promptText="AA" prefWidth="55" styleClass="form-input"/>
        </HBox>
        
        <Label styleClass="form-label" text="CVV:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <PasswordField fx:id="pwdCVV" promptText="***" prefWidth="70" styleClass="form-input" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox alignment="CENTER_RIGHT" spacing="10">
        <VBox.margin>
            <Insets top="10" />
        </VBox.margin>
        <Button onAction="#onClearClick" text="Borrar" styleClass="secondary-button" />
        <Button onAction="#onProcessPaymentClick" text="Pagar Ahora" styleClass="success-button" />
    </HBox>
</VBox>