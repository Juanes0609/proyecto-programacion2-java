<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox spacing="20" styleClass="root-container" stylesheets="@styles1.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.edu.uniquindio.logisticsapp.controller.UserShipmentListController">
    <padding>
        <Insets bottom="30" left="30" right="30" top="30" />
    </padding>

    <Label styleClass="title" text="Listado de Envios Generados">
        <font>
            <Font name="System Bold" size="28" />
        </font>
    </Label>

    <VBox styleClass="card-panel" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="15" left="15" right="15" top="15" />
        </padding>

        <Label styleClass="section-title" text="Lista de envios completa">
            <VBox.margin>
                <Insets bottom="10" />
            </VBox.margin>
        </Label>

        <TableView fx:id="tablaShipment" VBox.vgrow="ALWAYS">
            <columns>
                <TableColumn fx:id="colId" prefWidth="77.60000878572464" text="ID" />
                <TableColumn fx:id="colPackageType" prefWidth="124.79999542236328" text="Tipo" />
                <TableColumn fx:id="colOrigin" prefWidth="92.00001525878906" text="Origen" />
                <TableColumn fx:id="colDestination" prefWidth="107.20001220703125" text="Destino" />
                <TableColumn fx:id="colDistance" prefWidth="107.20001220703125" text="Distancia" />
                <TableColumn fx:id="colTotalCost" prefWidth="107.20001220703125" text="Costo" />

            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>

        <HBox alignment="CENTER_RIGHT" spacing="10">
            <VBox.margin>
                <Insets top="15" />
            </VBox.margin>
            <Button fx:id="btnBack" onAction="#onBackToDashboard" text="Volver al Dashboard" />
            <Button fx:id="btnDelete" onAction="#onDeleteButton" text="Eliminar Envio" />
        </HBox>
    </VBox>

</VBox>
